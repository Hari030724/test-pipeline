pipeline {
    agent any

    environment {
        SONARQUBE = 'Sonar'  // This should match the name you gave when configuring SonarQube in Jenkins
     SONARQUBE_SERVER ='http://localhost:9000'
    }

    stages {
   stage('Build') {
         withSonarQubeEnv('Sonar') {
            mvnHome = tool 'Maven 3.9.8'  
            mvnCmd = "${mvnHome}/bin/mvn"
            scannerHome = sh(script: "${mvnCmd} clean package sonar:sonar -Dsonar.host.url=${env.SONARQUBE_SERVER}", returnStatus: true)
        }

       }
            
        stage('SonarQube Analysis') {
            steps {
                script {
                    withSonarQubeEnv(SONARQUBE) {
                        sh 'mvn sonar:sonar'  // Adjust this based on your SonarQube scanner command
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                waitForQualityGate abortPipeline: true
            }
        }
    }
}
